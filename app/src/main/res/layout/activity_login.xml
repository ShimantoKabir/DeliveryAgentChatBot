<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_activity_bg"
    tools:context="com.example.maask.deliveryagentchatbot.LoginActivity">

    <ImageView
        android:paddingTop="200dp"
        android:src="@drawable/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:text="FreeDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/client_delivery_rg"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/client_rb"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:text="Client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/delivery_man_rb"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:text="Delivery Man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <com.google.android.gms.common.SignInButton
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/google_login"
        android:layout_below="@+id/or"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
